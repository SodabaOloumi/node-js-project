<%- include('./include/head.ejs') %>
</head>

<body>
    <%- include('./include/sidebar.ejs') %>
    <%- include('./include/navbar.ejs') %> 
    <% if(isAuthenticated){ %>
    <div class="product-status mg-b-15">
      <div class="container-fluid">
          <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                  <div class="product-status-wrap drp-lst">
                      <h4>Students List</h4>
                      <div class="add-product">
                          <a href="/add-student">Add Student</a>
                      </div>
                      <div class="asset-inner">
                          <table class=" table-hover">
                              <tr>
                                  <th>Photo</th>
                                  <th>No</th>
                                  <th>Full Name</th>
                                  <th>Gender</th>
                                  <th>Department</th>
                                  <th>Email</th>
                                  <th>Phone</th>
                                  <th>Address</th>
                                  <th>Setting</th>
                              </tr>
                                <% let Num = 0 %>
                                <% for (let s of students) { %>
                                  <%  Num++ %>
                              <tr>
                                  <td><img class="img" src="<%=s.imageUrl%>"></td>
                                  <td><%= Num %></td>
                                  <td><%= s.firstName %></td>
                                  <td><%= s.gender %></td>
                                  <td><%= s.courseId.courseName %></td>
                                  <td><%= s.email %></td>
                                  <td><%= s.mobileno %></td>
                                  <td><%= s.address %></td>
                                  <td>
                                    <form action="/studentDetails" method="post" style="display:inline-block;">
                                      <input type="hidden" value="<%= s._id %>" name="studentId">
                                      <button type="submit" class="educate-icon educate-library icon-wrap btn btn-primary data-toggle="modal" data-target="#details"></button>
                                    </form>
                                   
                                      
                                    <form action="getEditStudent" method="POST" style="display:inline-block;">
                                        <input type="hidden" value="<%= s._id %>" name="studentId"> 
                                        <button type="submit" class="fa fa-pencil-square-o btn btn-primary "></button>
                                      </form> 

                                      <!-- <a class="btn fa fa-pencil-square-o btn btn-info" ></a> -->
                                      <button type="button" class="fa fa-trash-o btn btn-primary " data-toggle="modal" data-target="#exampleModal"></button>
                                      
              
                                      
                                    </td>
                                    <!-- delete modal -->
                                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                      <div class="modal-dialog">
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                              <span aria-hidden="true">&times;</span>
                                            </button>
                                          </div>
                                          <div class="modal-body">
                                            <h1 style="text-align:center; ">Are you sure?</h1></br>
                                            <h3>You will not be able to recover this imaginary !</h3>
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            
                                            <form action="/deleteStudent" method="POST" style="display:inline-block;" >
                                              <input  type="hidden" name="studentId" value="<%= s._id%>"></input>
                                              <button  type="submit" class="btn btn-primary">Delete</button>
                                                    </form>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                    <!-- end delet modal -->

                                     
                              </tr>
                              <% } %>  
                          </table>
                          
                      </div>
                 </div>
              </div>
          </div>
          
      </div>
  </div>
<!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button> -->

<!-- Modal -->
<%}%>
<br><br> <br><br><br><br> <br><br> <br><br> <br><br> <br><br> <br><br> <br><br> <br><br>
     
        <%- include('./include/footer.ejs') %> 

   
</body>

</html>